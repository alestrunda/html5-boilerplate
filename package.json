{
  "name": "html5-boilerplate",
  "description": "HTML5 boilerplate for new web sites",
  "version": "0.1.0",
  "author": "AleÅ¡ Trunda",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alestrunda/html5-boilerplate.git"
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "gulp-purifycss": "^0.2.0",
    "stylelint": "^11.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "autoprefixer": "^9.7.0",
    "cssnano": "^4.1.10",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-uglify": "^3.0.2",
    "stylelint-config-standard": "^19.0.0"
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "declaration-block-no-duplicate-properties": true,
      "at-rule-empty-line-before": [
        "never",
        {
          "ignoreAtRules": [
            "import"
          ]
        }
      ],
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "function",
            "if",
            "each",
            "else",
            "error",
            "include",
            "mixin",
            "return",
            "warn"
          ]
        }
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
